<div id="allfriends">
   <div class="pheading">
      <h2 class="lcol">
         [friends-all]Все друзья ({friends-num})[/friends-all]
         [friends-common]Общие друзья ({common-num})[/friends-common]
         [suggestions]Возможные друзья[/suggestions]
      </h2>
      [requests]
      <div class="rcol"><span class="baseinfo radial"><a href="{friends-requests}"><strong>{requests-num}</strong> ожидающих подтверждения</a></span></div>
      [/requests]
      <br clear="all" />
   </div>
   <div class="basecont">
      <div class="dpad">
         <table width="100%" cellspacing="1" cellpadding="0" class="friends_table">
            {friends}
         </table>
         <br clear="all" />
      </div>
   </div>
</div>